<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:id="@+id/linearLayout_notificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:baselineAligned="false">

            <!-- IMAGE CONTAINER-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_insertImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    app:srcCompat="@drawable/img_mybooking"
                    tools:ignore="ContentDescription,ImageContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <!-- TITLE -->
                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratt"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:text="Title"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck" />

                <!-- Uploaded Title -->
                <TextView
                    android:id="@+id/txt_title_uploadedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratt"
                    android:text="Uploaded:"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    tools:ignore="HardcodedText,UnusedAttribute" />

                <!-- Uploaded Date -->
                <TextView
                    android:id="@+id/txt_uploadedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratt"
                    android:text="XX-XX-XXXX"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:singleLine="true"
                    tools:ignore="HardcodedText,UnusedAttribute" />

                <!-- Highlighter -->
                <TextView
                    android:id="@+id/txt_highlighter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratt"
                    android:text="Progress"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UnusedAttribute" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>