<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookingSummary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_above="@id/btn_confirm">

        <LinearLayout
            android:id="@+id/linearLayout_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Total Coffee Machines -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/montserratt"
                android:text="Total Coffee Machines"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <TextView
                android:id="@+id/txt_totalCoffeeMachines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserratt"
                android:text="0"
                android:textColor="#FF8300"
                android:textSize="18sp"
                tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck" />

            <!-- Serial Numbers -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/montserratt"
                android:text="Serial Numbers"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <TextView
                android:id="@+id/txt_serialNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserratt"
                android:text="XXXXXXXX\nXXXXXXXX\nXXXXXXXX"
                android:textColor="#FF8300"
                android:textSize="18sp"
                tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck" />

            <!-- Contact Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/montserratt"
                android:text="Contact Number"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <TextView
                android:id="@+id/txt_contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserratt"
                android:text="+971 00 000 0000"
                android:textColor="#FF8300"
                android:textSize="18sp"
                tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck" />

            <!-- Location -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/montserratt"
                android:text="Location"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <TextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserratt"
                android:text="Location here"
                android:textColor="#FF8300"
                android:textSize="18sp"
                tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck" />

            <!-- Issue -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/montserratt"
                android:text="Issue"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <TextView
                android:id="@+id/txt_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserratt"
                android:text="My machine is broke"
                android:textColor="#FF8300"
                android:textSize="18sp"
                tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck" />

            <!-- Photos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/montserratt"
                android:text="Photos"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/img_coffee_machine"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/img_coffee_machine"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/img_coffee_machine"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/img_coffee_machine"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/img_coffee_machine"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/img_coffee_machine"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:backgroundTint="#FF8300"
        android:text="CONFIRM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserratt"
        android:letterSpacing="0"
        tools:ignore="HardcodedText,TextContrastCheck" />

</RelativeLayout>